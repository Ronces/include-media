#!/bin/bash

. $HOME/.include-media/include-media.cfg

number_of_args=$#
option=$1
file=$2

error=false
error_message=""

help_display="                         
Synopsis : include-media OPTION FILE 

OPTIONS                             
-m music                             
-f film                             
-t tv-show                          
-h help                             

"

if [ "$number_of_ags" = 1 -a "$option" = "-h" ]; then
  echo -e "$help_display"
elif [ "$number_of_args" = 2 ]; then  

  if [ "$option" = "-m" ]; then
    /lib/include-media/include_music "$file"
  elif [ "$option" = "-f" -o "$option" = "-t" ]; then
    /lib/include-media/include_video "$option" "$file"
  elif [ "$option" = "-h" ]; then
    echo -e "$help_display"
  else
    error=true
    error_message="Invalide option."
  fi

else
  error=true
  error_message="Wrong number of arguments."  
fi

if $error; then 
  echo "Error : " $error_message " See includemedia -h for help."
fi

exit 0
