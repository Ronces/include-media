#!/bin/bash

number_of_args=$#
option=$1

if [ "$option" = "-m" ]; then
  echo "music"
elif [ "$option" = "-f" ]; then
  echo "film"
elif [ "$option" = "-t" ]; then
  echo "tv-show"
elif [ "$option" = "-h" ]; then
  echo "
  Synopsis : includemedia OPTION FILE

  OPTIONS
  -m musique
  -f film
  -t tv-show
  -h help
  "
else
  echo "Error : bad option. See includemedia -h for help"
fi

exit 0
